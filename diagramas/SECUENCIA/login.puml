@startuml
' Configuración de estilo visual
skinparam sequenceArrowColor #4682B4
skinparam actorBorderColor #8B4513
skinparam actorBackgroundColor #FFFACD
skinparam participantBorderColor #4682B4
skinparam participantBackgroundColor #E6E6FA

actor "Usuario" as User
boundary "Login" as LoginView
boundary "Home" as HomeView
control "UserController" as Controller
entity "users" as DB
entity "user_sessions" as SessionDB

User -> LoginView : ingresar()
LoginView -->> User : mostrarFormulario()

LoginView -> Controller : enviarCredenciales(usuario, contraseña)
Controller -->> LoginView : confirmarRecepción()

Controller -> DB : validarUsuario(usuario, contraseña)
DB -->> Controller : resultadoValidación

alt Usuario válido
    Controller -> SessionDB : registrarSesion(usuario_id, timestamp)
    SessionDB -->> Controller : sesiónRegistrada

    Controller --> HomeView : mostrarHome()
    HomeView --> User : mostrarInterfazHome()
else Usuario no válido
    Controller --> LoginView : mostrarError()
    LoginView --> User : notificarError()
end

@enduml
